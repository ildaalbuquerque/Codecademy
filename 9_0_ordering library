#4/6
def alphabetize(arr, rev = false)
  arr.sort!
end

numbers = [6, 2, 8]

puts alphabetize(numbers)

#5/6
def alphabetize(arr, rev = false)
    arr.sort!
    if rev==true
      arr.sort.reverse!
    else
      arr
    end
end

numbers = [6, 2, 8]

puts alphabetize(numbers,true)

#6/6
def alphabetize(arr, rev = false)
    arr.sort!
    if rev==true
      return arr.sort.reverse!
    else
      return arr
    end
end

numbers = [6, 2, 8]

puts alphabetize(numbers,true)
