#7/8
print "Type something"
user_input = gets.chomp
user_input.downcase!

if
  user_input.include? "s"
  user_input.gsub!(/s/, "th")
  puts "#{user_input}"
else
  puts "no s"
end

#8/8A
print "Type something"
user_input = gets.chomp

while user_input == ""
  print "Really...type something"
  user_input = gets.chomp
end

user_input.downcase!
  if
  user_input.include? "s"
  user_input.gsub!(/s/, "th")
  puts "#{user_input}"
  else
    puts "no s"
  end
  
  #8/8B
  print "Type something"
user_input = gets.chomp

if user_input == ""
  print "Really...type something"
  user_input = gets.chomp
end

user_input.downcase!
  if
  user_input.include? "s"
  user_input.gsub!(/s/, "th")
  puts "#{user_input}"
  else
    puts "no s"
  end


